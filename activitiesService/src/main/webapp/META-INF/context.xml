<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" antiResourceLocking="true" path="/activitiesService">
    <Resource 
        name="BW_activities" 
        type="javax.sql.DataSource" 
        driverClassName="com.mysql.jdbc.Driver" 
        logAbandoned="true"
        removeAbandoned="true"
		removeAbandonedTimeout="90"
		scope="Container"
		testWhileIdle="true"
		timeBetweenEvictionRunsMillis="50000"
        url="jdbc:mysql://localhost:3306/BW_activities"
        username="root"
        maxActive="30"
        maxIdle="5"
        maxWait="10000"
        validationQuery="select 1"
    />
</Context>